#
# web rules
match /trunk/www/
  repository legacy-www
  branch master
end match

#
# Prepare for tags
match /tags/([^/]+)/
  repository libavg
  branch tag--\1
end match

match /branches/releases/([^/]+)/
  repository libavg
  branch tag--\1
end match

#
# branches
# order is important
match /branches/exhibitions/([^/]+)/
  repository libavg
  branch exhibtions/\1
end match

match /branches/experiments/([^/]+)/
  repository libavg
  branch experiments/\1
end match

match /branches/([^/]+)/
  repository libavg
  branch \1
end match

